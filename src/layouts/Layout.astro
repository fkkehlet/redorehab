---
import '@styles/global.css';
import { SEO } from 'astro-seo';

export interface Props {
  title: string;
  description: string;
  ogType?: string;
  ogImage?: string;
}

const { title, description, ogType = 'website', ogImage = '' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO
      charset="UTF-8"
      title={title}
      description={description}
      openGraph={{
        basic: {
          type: ogType,
          title: title,
          image: ogImage,
        },
        optional: {
          siteName: 'redo. rehab.',
        },
      }}
      extend={{
        link: [
          { rel: 'icon', type: 'image/png', href: '/favicon.png' },
          { rel: 'sitemap', href: '/sitemap-index.xml' },
          // { rel: 'stylesheet', href: 'https://use.typekit.net/gbi4aes.css' },
        ],
        meta: [{ name: 'viewport', content: 'width=device-width, initial-scale=1' }],
      }}
    />

    <link rel="stylesheet" href="https://use.typekit.net/gbi4aes.css" />
  </head>

  <body class="bg-zinc-950 text-zinc-50 text-f-base font-body">
    <main>
      <slot />
    </main>
  </body></html
>
